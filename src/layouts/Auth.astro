---
interface Props {
    title?: string;
}

const { title = "ورود / ثبت نام" } = Astro.props;

import "../styles/css/fonts.css";
import "../styles/css/app.css";
import "../styles/css/base.css";
---

<!doctype html>
<html lang="fa-IR" dir="rtl">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <script defer src="/src/scripts/theme.js"></script>
        <script src="/src/scripts/mount.js"></script>

        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
