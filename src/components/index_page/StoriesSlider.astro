  { id: 2, img: '/src/assets/images/story2.jpg', title: 'رکوردر صدای دانشجویی!' },
  { id: 3, img: '/src/assets/images/story3.jpg', title: 'خوشگل‌ترین ماوس دیجی‌کالا🖱' },
  { id: 4, img: '/src/assets/images/story4.jpg', title: 'تخته برش ریور' },
  { id: 5, img: '/src/assets/images/story5.jpg', title: 'خمیردندان و مسواکِ کودکِ' },
  { id: 6, img: '/src/assets/images/story6.jpg', title: 'پاور تیکا ؛ تست حافظه!' },
  { id: 7, img: '/src/assets/images/story7.jpg', title: 'اسباب کشی‌تو راحت می‌کنه' },
  { id: 8, img: '/src/assets/images/story8.jpg', title: 'جورابای درست حسابی' },
  { id: 9, img: '/src/assets/images/story9.jpg', title: 'آیس کافی وانیلی🍧🥛' },
  { id: 10, img: '/src/assets/images/story10.jpg', title: 'یه تجربه ی متفاوت !!!!' },
  { id: 11, img: '/src/assets/images/story11.jpg', title: 'راهنمای خرید هندزفری' },
  { id: 12, img: '/src/assets/images/story12.jpg', title: 'چرا دهان‌شویه؟🦷' },
